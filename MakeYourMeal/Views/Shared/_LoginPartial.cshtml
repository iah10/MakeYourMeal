@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
	using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
	{
		@Html.AntiForgeryToken()

		<ul class="nav navbar-nav navbar-right">
			<li>
				@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
			</li>
			<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
		</ul>
	}
}
else
{
	if (!ViewBag.Title.Equals("Orders"))
	{
		<ul id="nav" class="nav navbar-nav navbar-right">
			<li>
				<button class="btn btn-default btn-lg btn-link my-order" style="font-size: 25px;">
					<span>
						@Html.ActionLink(" ", "MyOrder", "Order", routeValues: null, htmlAttributes:
							  new { @class = "glyphicon glyphicon-shopping-cart" })
					</span>
				</button>
				<span data-bind="visible: numberOfNoti() >0"><span class="badge badge-notify" data-bind="text: numberOfNoti"></span></span>
			</li>
		</ul>
	}
}
